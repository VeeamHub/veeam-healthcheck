<Window x:Class="VeeamHealthCheck.Functions.CredsWindow.CredentialPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication Required" 
        Height="320" 
        Width="450" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="#F5F5F5"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#00B336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#009E2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#008A28"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#00B336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#00B336"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header Section -->
        <Border Background="#00B336" Height="80" VerticalAlignment="Top">
            <StackPanel VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="🔐 Authentication Required" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="White"/>
                <TextBlock x:Name="ServerText"
                          Text="Please enter your credentials" 
                          FontSize="13" 
                          Foreground="#E0F7E9"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Section -->
        <Border Margin="0,80,0,0" Background="White" CornerRadius="0">
            <Grid Margin="30,25,30,25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username Section -->
                <TextBlock Text="Username" 
                          Grid.Row="0" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          Margin="0,0,0,6"/>
                <Border Grid.Row="1" 
                       BorderBrush="#CCCCCC" 
                       BorderThickness="1" 
                       CornerRadius="4"
                       Margin="0,0,0,18">
                    <TextBox x:Name="UsernameBox" 
                            Style="{StaticResource ModernTextBox}"
                            BorderThickness="0"/>
                </Border>

                <!-- Password Section -->
                <TextBlock Text="Password" 
                          Grid.Row="2" 
                          FontSize="13" 
                          FontWeight="SemiBold"
                          Foreground="#333333"
                          Margin="0,0,0,6"/>
                <Border Grid.Row="3" 
                       BorderBrush="#CCCCCC" 
                       BorderThickness="1" 
                       CornerRadius="4"
                       Margin="0,0,0,18">
                    <PasswordBox x:Name="PasswordBox" 
                                Style="{StaticResource ModernPasswordBox}"
                                BorderThickness="0"/>
                </Border>

                <!-- Info Text -->
                <TextBlock Grid.Row="4"
                          Text="Credentials are stored in memory for this session only"
                          FontSize="11"
                          Foreground="#888888"
                          FontStyle="Italic"
                          VerticalAlignment="Top"
                          Margin="0,0,0,15"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="5" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                           Width="90" 
                           Margin="0,0,10,0" 
                           Style="{StaticResource CancelButton}"
                           IsCancel="True"/>
                    <Button Content="Connect" 
                           Width="90"
                           Style="{StaticResource ModernButton}"
                           IsDefault="True" 
                           Click="Ok_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>