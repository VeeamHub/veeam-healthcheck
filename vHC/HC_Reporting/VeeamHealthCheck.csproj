<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Platforms>AnyCPU;x64</Platforms>
    <PackageIcon></PackageIcon>
    <PackageIconUrl />
    <Company>Veeam</Company>
    <Authors>AdamC</Authors>
    <ApplicationIcon>Veeam_HealthCheck_228x228.ico</ApplicationIcon>
    <AssemblyVersion>1.0.1.1426</AssemblyVersion>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>vhc_keyfile2.pfx</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    <FileVersion>1.0.1.1426</FileVersion>
    <DebugType>full</DebugType>
	  <SelfContained>true</SelfContained>
	  <!--These 2 lines are what produce the single file utility. Possibly doesn't work...-->
	  <!--<PublishSingleFile>true</PublishSingleFile>-->
	  <!--<IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>-->
	  <RuntimeIdentifier>win-x64</RuntimeIdentifier>
	  <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="VBO\**" />
    <EmbeddedResource Remove="VBO\**" />
    <None Remove="VBO\**" />
    <Page Remove="VBO\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\BaseResources.resources" />
    <None Remove="RVTools4.1.4.msi" />
    <None Remove="Tools\Get-VBRConfig - Copy.ps1" />
    <None Remove="Tools\Veeam.Hotfix.Detector.zip" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="0.16.0" />
    <PackageReference Include="Cake.Powershell" Version="1.0.1" />
    <PackageReference Include="CsvHelper" Version="27.2.1" />
    <PackageReference Include="DotNetProjects.WpfToolkit.DataVisualization" Version="6.0.90" />
    <PackageReference Include="HtmlAgilityPack" Version="1.11.36" />
    <PackageReference Include="System.Resources.ResourceManager" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Get-VBRConfig.ps1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Get-VeeamSessionReport.ps1">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Tools\Veeam.Hotfix.Detector.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\BaseResources.resources" />
  </ItemGroup>

  <ItemGroup>
    <None Update="StyleSheets\m365-Report.xsl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="StyleSheets\vbr-Report.xsl">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Veeam_HealthCheck_228x228.ico">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Softwares\VB365\CsvHandlers\" />
    <Folder Include="Softwares\VBR\" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\VhcResources.fr-LU.Designer.cs">
      <DependentUpon>VhcResources.fr-LU.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
    <Compile Update="Resources\VhcResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>VhcResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\VhcResources.fr-LU.resx">
      <LastGenOutput>VhcResources.fr-LU.Designer.cs</LastGenOutput>
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Resources\VhcResources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>VhcResources.Designer.cs</LastGenOutput>
      <CustomToolNamespace></CustomToolNamespace>
    </EmbeddedResource>
  </ItemGroup>

</Project>
