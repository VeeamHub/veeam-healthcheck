        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ProgressBar Minimum="0" Maximum="100" Name="pBar" IsIndeterminate="True"  Height="50" VerticalAlignment="Bottom" />
